<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/mo_geek_float_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
>

    <ImageView
        android:id="@+id/mo_geek_float_img"
        android:layout_width="28dp"
        android:layout_height="24dp"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/mo_geek_probe_no"
    />
    <RelativeLayout
        android:layout_centerVertical="true"
        android:id="@+id/mo_geek_float_rel1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/mo_geek_float_img1"
            android:layout_width="18dp"
            android:layout_height="24dp"
            android:scaleType="fitStart"
            android:layout_centerVertical="true"
            android:src="@drawable/mo_geek_probe"
        />

        <RelativeLayout
            android:id="@+id/mo_geek_float_view_rle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:visibility="gone">
            <com.example.chenmingying.floatview.view.CircleView
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:layout_centerVertical="true"/>
            <ImageView
                android:layout_width="28dp"
                android:layout_height="24dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/mo_geek_probe_no"
            />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mo_geek_float_rel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true">
        <ImageView
            android:id="@+id/mo_geek_float_img2"
            android:layout_width="18dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="fitEnd"
            android:src="@drawable/mo_geek_probe_right"
        />

        <RelativeLayout
            android:id="@+id/mo_geek_float_view_rle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:visibility="gone"
        >
            <com.example.chenmingying.floatview.view.CircleView
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:layout_centerVertical="true"/>
            <ImageView
                android:layout_width="28dp"
                android:layout_height="24dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/mo_geek_probe_no"
            />
        </RelativeLayout>
    </RelativeLayout>



</RelativeLayout>
